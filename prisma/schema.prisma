datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model OTP {
  id        String    @id @default(uuid())
  code      String    @unique
  used      Boolean   @default(false)
  createdAt DateTime  @default(now())
  usedAt    DateTime?
  
  @@index([code])
}

model FailedAttempt {
  id        String   @id @default(uuid())
  codeHash  String
  ipHash    String?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([codeHash])
}

enum AgentStatus {
  STARTING
  RUNNING
  STOPPED
  ERROR
}

model ElizaAgent {
  id             String      @id @default(uuid())
  name           String      @unique
  status         AgentStatus @default(STARTING)
  containerId    String?
  characterConfig Json
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@map("eliza_agents")
}