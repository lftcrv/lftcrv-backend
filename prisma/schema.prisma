datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model OTP {
  id        String    @id @default(uuid())
  code      String    @unique
  used      Boolean   @default(false)
  createdAt DateTime  @default(now())
  usedAt    DateTime?
  
  @@index([code])
}

model FailedAttempt {
  id        String   @id @default(uuid())
  codeHash  String
  ipHash    String?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([codeHash])
} 